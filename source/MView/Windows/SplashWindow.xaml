<Window x:Class="MView.Windows.SplashWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:hc="https://handyorg.github.io/handycontrol"
                  xmlns:splash="clr-namespace:HandyControl.Controls.SplashWindow;assembly=HandyControl"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:MView.Windows"
                  mc:Ignorable="d"
                  Title="MView" Height="300" Width="550"
                  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" Topmost="True">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/splash.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock Foreground="WhiteSmoke" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Text="Loading..."/>
    </Grid>
</Window>
