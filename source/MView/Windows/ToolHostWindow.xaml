<hc:Window x:Class="MView.Windows.ToolHostWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:hc="https://handyorg.github.io/handycontrol"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:local="clr-namespace:MView.Windows"
           mc:Ignorable="d"
           Title="{Binding Title}"
           Background="{DynamicResource RegionBrush}"
           ResizeMode="CanResize"
           WindowStartupLocation="CenterScreen"
           Height="{Binding Height}" Width="{Binding Width}" MinHeight="300" MinWidth="300">
    <Grid>
        <Frame BorderThickness="0" NavigationUIVisibility="Hidden" Content="{Binding ToolPage}"/>
    </Grid>
</hc:Window>
